<resources>
    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Base.V7.Theme.AppCompat.Light">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--Appbar背景色，应用的主要色调-->
        <item name="colorPrimary">@color/black_1</item>
        <!--状态栏颜色，应用的主要暗色调-->
        <item name="colorPrimaryDark">@color/black_1</item>
        <!--一般控件的选中效果默认颜色-->
        <item name="colorAccent">@color/blue_3</item>
        <!--控件选中时的颜色-->
        <item name="colorControlActivated">@color/blue_3</item>
        <item name="colorSwitchThumbNormal">@color/white_1</item>
        <!--应用的前景色-->
        <item name="android:colorForeground">@color/white_1</item>
        <!--应用的背景色-->
        <item name="android:colorBackground">@color/black_1</item>
    </style>

    <style name="launch_app_theme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/bg</item>
    </style>

    <style name="main_theme" parent="AppTheme">
    </style>

    <style name="Default_font_size_10">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Default_font_size_12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Default_font_size_16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Default_font_size_14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Default_font_size_18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Default_font_size_20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Default_font_size_24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Default_font_size_30">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Default_font_size_50">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="vertical_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white_3</item>
    </style>

    <style name="ll_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black_1</item>
    </style>

    <style name="login_iv_style">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="login_til" parent="Default_font_size_16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColorHint">@color/white_1</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="login_item_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="cancelBtShadow" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="default_bg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg</item>
    </style>

    <style name="et_one" parent="Default_font_size_16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textColorHint">@color/white_1</item>
    </style>

    <style name="style_til">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColorHint">@color/white_1</item>
    </style>

    <style name="style_tie" parent="Default_font_size_16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/tran_1</item>
        <item name="android:textColor">@color/white_1</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:textColorHint">@color/white_1</item>
    </style>

    <style name="style_tie_pwd" parent="style_tie">
        <item name="android:inputType">textPassword</item>

    </style>

    <style name="bt_default" parent="cancelBtShadow">
        <item name="android:background">@drawable/default_selector_gray_to_white</item>
    </style>

    <style name="style_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="style_set_tv" parent="Default_font_size_16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_1</item>
    </style>

    <style name="top_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="top_rl_bt">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/selector_return_bt</item>
    </style>

    <style name="top_rl_bt_right_tv" parent="bt_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="top_rl_tv" parent="Default_font_size_20">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white_1</item>
    </style>

    <style name="style_alarm_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="more_item_rl" parent="bt_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="more_user_right_iv">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/vector_right_arrow_white</item>
    </style>

    <style name="more_user_tv" parent="Default_font_size_16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white_1</item>
    </style>

    <style name="et_two" parent="Default_font_size_16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textColorHint">@color/blue_1</item>
    </style>

    <style name="about_us_bt_style" parent="bt_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/selector_white_to_gray</item>
        <item name="android:textColor">@color/black_1</item>
    </style>

    <style name="about_us_tv" parent="Default_font_size_16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textColorLink">@color/white_1</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="icon_style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="login_ll_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
</resources>
